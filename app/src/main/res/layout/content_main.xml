<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="sh.nothing.droidbike.MainActivity"
        tools:showIn="@layout/activity_main">

        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:minWidth="72dp"
            android:text="24.5"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorAccent"
            android:textSize="80sp"
            app:layout_constraintRight_toLeftOf="@+id/textView5"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="km/h"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/speed"/>


        <TextView
            android:id="@+id/cadence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:minWidth="72dp"
            android:text="0.0"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="80sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/speed"
            app:layout_constraintRight_toLeftOf="@+id/textView6"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="rpm"
            android:textColor="@color/colorPrimaryDark"

            app:layout_constraintBaseline_toBaselineOf="@+id/cadence"
            app:layout_constraintLeft_toLeftOf="@+id/textView5"/>


        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="0"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorPrimary"
            android:textSize="24pt"
            android:minWidth="72dp"
            app:layout_constraintRight_toLeftOf="@+id/height_sub"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cadence"/>


        <TextView
            android:id="@+id/height_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text=".0"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorPrimary"
            app:layout_constraintRight_toLeftOf="@+id/textView"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/height"/>

        <TextView
            android:id="@+id/pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="1010.10"
            android:textAlignment="viewEnd"
            app:layout_constraintRight_toLeftOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/height"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="25.0"
            android:textAlignment="viewEnd"
            app:layout_constraintRight_toLeftOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/pressure"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="m"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBaseline_toBaselineOf="@+id/height"
            app:layout_constraintLeft_toLeftOf="@+id/textView6"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="hPa"
            app:layout_constraintBottom_toBottomOf="@+id/pressure"
            app:layout_constraintLeft_toLeftOf="@+id/textView"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="â„ƒ"
            app:layout_constraintBottom_toBottomOf="@+id/temperature"
            app:layout_constraintLeft_toLeftOf="@+id/textView"/>

        <ImageView
            android:id="@+id/connectionIndicator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/indicator_inactive"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            tools:layout_editor_absoluteX="169dp"/>

        <ImageView
            android:id="@+id/connectionIndicator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/indicator_inactive"
            app:layout_constraintLeft_toLeftOf="@+id/connectionIndicator1"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/connectionIndicator1"/>

        <ImageView
            android:id="@+id/connectionIndicator3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/indicator_inactive"
            app:layout_constraintLeft_toLeftOf="@+id/connectionIndicator2"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/connectionIndicator2"/>

    </android.support.constraint.ConstraintLayout>

</layout>
